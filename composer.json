{
    "name": "parfume-reviews/wordpress-plugin",
    "description": "A comprehensive perfume review system for WordPress with advanced features",
    "type": "wordpress-plugin",
    "version": "2.0.0",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Parfume_Reviews\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Parfume_Reviews\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "support": {
        "issues": "https://github.com/yourusername/parfume-reviews/issues",
        "source": "https://github.com/yourusername/parfume-reviews"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "parfume",
        "perfume",
        "reviews",
        "comparison",
        "e-commerce"
    ]
}